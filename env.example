# OpenAI API Key (for embeddings)
# Optional: Leave empty to use sentence-transformers (free, but lower quality)
OPENAI_API_KEY=your_openai_api_key_here

# Neo4j Configuration
# Required for graph relationships
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ChromaDB Configuration
# Local storage directory for vector embeddings
CHROMA_PERSIST_DIR=./chroma_db

# Redis Configuration (optional, for caching)
# Leave empty to use in-memory cache
REDIS_URL=redis://localhost:6379

# Application Settings
API_PORT=8000
DEBUG=True

# Embedding Model Configuration
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, etc.
# Only used if OPENAI_API_KEY is not set
EMBEDDING_MODEL=all-MiniLM-L6-v2
USE_OPENAI_EMBEDDINGS=False

